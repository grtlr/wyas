cabal-version:       >=1.10

library
  exposed-modules:     Parser,
                       Parser.Primitives,
                       Parser.Types,
                       Evaluator,
                       Error
  ghc-options:         -Wall
  build-depends:       base, parsec >=3.1, vector >=0.10, mtl
  hs-source-dirs:      src
  default-language:    Haskell2010

executable wyas
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       base,
                       wyas

test-suite parser-tests
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MainTestSuite.hs
  build-depends:       base,
                       tasty,
                       tasty-hunit,
                       wyas,
                       vector
  default-language:    Haskell2010
  ghc-options:         -Wall
